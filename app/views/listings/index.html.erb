<div class="jumbotron" >
  <h1><font color="white">An online marketplace<br>
  for green building services.</font></h1>
  <h2><font color="white">Find trusted and experienced local providers.</font></h2>
</div>

  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">
         <%= link_to image_tag(listing.image.url), listing %>
          <div class="caption">
            <h3><%= listing.name %></h3>
            <p><%= number_to_currency(listing.price) %></p>
            <p><%= "Offer by #{listing.user.name}" %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<br>

<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path %>
<% end %>



